{
  "name": "toast-vanilla",
  "version": "1.0.6",
  "description": "A lightweight, vanilla JavaScript toast notification system with zero dependencies. Display elegant notifications with support for standard toasts and promise-based async operations.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "url": "https://github.com/aljimsondev/toast-vanilla"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "concurrently \"esbuild src/index.ts --bundle --format=esm --outfile=dist/index.js --watch\" \"tsc --emitDeclarationOnly --watch\"",
    "build": "node esbuild.config.js && tsc --emitDeclarationOnly",
    "demo:react": "cd demo/react-demo && npm run dev",
    "demo:next": "cd demo/next-demo && npm run dev"
  },
  "keywords": [
    "toast",
    "toast-vanilla",
    "javascript",
    "notifications",
    "snackbar"
  ],
  "files": [
    "dist"
  ],
  "author": "aljimsondev",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.12",
    "esbuild-plugin-copy": "^2.1.1",
    "typescript": "^5.9.3"
  }
}
